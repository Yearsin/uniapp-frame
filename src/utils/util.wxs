}
// 获取银行卡后四位
function getBankCodeLastFour (str) {
    var len = str.length;
	return str.substring(len - 4, len);
}
// 身份证号脱敏
function hiddenIdCard(str) {
    var len = str.length;
	return str.substring(0, 3) + '***********' + str.substring(len - 4, len);
}
// 手机号脱敏
function hiddenPhone(str) {
    var len = str.length;
	return str.substring(0, 3) + '****' + str.substring(len - 4, len);
}
