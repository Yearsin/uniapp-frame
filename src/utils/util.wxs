function indexOf (arr, val) {
    return arr.indexOf(val) !== -1;
}
function toFixed (str, len) {
    return str.toFixed(len);
}
function find (arr, key, value) {
    for (var i = 0; i < arr.length; i++) {
        if (arr[i][key] === value) {
            return arr[i];
        }
    }
}
function join(arr, str) {
    return arr.join(str);
}
